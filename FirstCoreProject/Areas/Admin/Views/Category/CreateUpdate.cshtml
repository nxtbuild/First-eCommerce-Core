@model FirstCoreProject.Models.ViewModels.CategoryViewModel

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="container p-1">
        <div class="row">
            <div class="col-8">
                <h1>@((Model.Category==null || Model.Category.Id==0)? "Create":"Update") Category</h1>
            </div>
            <div class="col-4">
                <a asp-controller="Category" asp-action="Index" class="btn btn-success btn-md"><i class="fa-solid fa-eye"></i> View Category</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12 mb-3">
                <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

             <div class="col-12 mb-3">
                <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" class="form-control"  />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

            </div>

            <div class="col-2">
                @if(Model.Category==null || Model.Category.Id==0)
                {
                    <button class="btn btn-success" type="submit">Create</button>

                }
                else
                {
                <button class="btn btn-success" type="submit">Save Change</button>
                    
                }


            </div>

        </div>


    </div>

</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
