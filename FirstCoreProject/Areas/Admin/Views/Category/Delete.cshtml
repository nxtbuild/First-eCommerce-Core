@model Category

<form method="post">

    <div class="container p-1">
        <div class="row">
            <div class="col-8">
                <h1>Delete Category</h1>
            </div>
            <div class="col-4">
                <a asp-controller="Category" asp-action="Index" class="btn btn-success btn-md"><i class="fa-solid fa-eye"></i> View Category</a>
            </div>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-12 mb-3">
                <label asp-for="Name"></label>
                <input disabled asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

             <div class="col-12 mb-3">
                <label asp-for="DisplayOrder"></label>
                <input disabled asp-for="DisplayOrder" class="form-control"  />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>

            <div class="col-2">
                <button class="btn btn-success" type="submit">Delete</button>
            </div>

        </div>


    </div>

</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
