@model FirstCoreProject.Models.ViewModels.CategoryViewModel


@{
    ViewData["Title"] = "Category";
}

<div class="container p-1">
    <div class="row">
        <div class="col-8">
            <h1>List of Category</h1>
            </div>
        <div class="col-4">
            <a asp-controller="Category" asp-action="CreateUpdate" class="btn btn-success btn-md"><i class="fa-solid fa-plus"></i> New Category</a>
        </div>
    </div>
</div>






<table class="table table-bordered table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model.categories)
        {
           <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td role="group">
                 <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-success btn-md"><i class="fa-solid fa-edit"></i></a>
                 <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-md"><i class="fa-solid fa-trash"></i></a>

            </td>
        </tr> 
        }
        
    </tbody>
</table>