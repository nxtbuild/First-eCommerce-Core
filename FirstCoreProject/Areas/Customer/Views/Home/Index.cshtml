@model IEnumerable<FirstCoreProject.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">
    
    @foreach (var item in @Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@item.ImageUrl" alt="">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">
                    <i class="fa-solid fa-indian-rupee-sign"></i>@item.Price
                </p>
                <a asp-action="Details" asp-controller="Home" asp-route-ProductId="@item.Id" class="btn btn-danger">Details</a>
            </div>
        </div>
    }

</div>
